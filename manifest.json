{
    "name": "wx-platform-editor",
    "description": "weixin public platform editor",
    "version": "0.0.1",
    "permissions": [
        "tabs",
        "contextMenus",
        "activeTab",
        "cookies",
        "notifications",
        "alarms",
        "storage",
        "webNavigation",
        "clipboardRead",
        "clipboardWrite",
        "\u003Call_urls\u003E"
    ],
    "browser_action": {
        "default_icon": "./img/wechat.png"
    },
    "icons": {
        "128": "./img/wechat.png"
    },
    "content_scripts": [{
        "run_at": "document_end",
        "matches": ["https://mp.weixin.qq.com/cgi-bin/appmsg?t=media/appmsg_edit*"],
        "js": ["./wxinject.js"]
    }, {
        "run_at": "document_start",
        "matches": ["https://mp.weixin.qq.com/cgi-bin/*"],
        "js": ["./wxtoken.js"]
    }],
    "background": {
        "scripts": ["./background.js"]
    },
    "options_page": "./option/index.html",
    "manifest_version": 2,
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}